{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,

    "types": ["./types"],

    "paths": {
      "interceptors/*": ["interceptors/*"],
      "utils/*": ["utils/*"],
      "database/*": ["database/*"],
      "modules/*": ["modules/*"],
      "services/*": ["services/*"],
      "gateways/*": ["gateways/*"]
    }
  }
}
